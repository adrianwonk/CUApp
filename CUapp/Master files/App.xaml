<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CUapp.App"
             xmlns:rv="clr-namespace:Sharpnado.MaterialFrame;assembly=Sharpnado.MaterialFrame">

    <Application.Resources>
         <Color x:Key="CommonBackgroundColor">black</Color>

        <Style x:Key="AcrylicFrame" TargetType="rv:MaterialFrame">
                <Setter Property="MaterialTheme" Value="Acrylic"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="IsClippedToBounds" Value="True"/>
         </Style>

        <Style x:Key="AcrylicFrameRecipe" TargetType="rv:MaterialFrame">
                <Setter Property="MaterialTheme" Value="Acrylic"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="HeightRequest" Value="140"/>
                <Setter Property="IsClippedToBounds" Value="True"/>
         </Style>

        <Style x:Key="AcrylicBlurFrame" TargetType="rv:MaterialFrame">
                <Setter Property="MaterialTheme" Value="AcrylicBlur"/>
                <Setter Property="CornerRadius" Value="10"/>
         </Style>
        <Style x:Key="NormalFrame" TargetType="rv:MaterialFrame">
                <Setter Property="MaterialTheme" Value="Light"/>
                <Setter Property="CornerRadius" Value="10"/>
         </Style>
    </Application.Resources>
</Application>